<div class="container">
	<div class="jumbotron mt-2">
		{{#each data}}
		<h1 class="mt-3 text-center">{{this.product_name}}</h1>
			<div class="col-lg-8 col-md-8 col-sm-8 mb-2 mx-auto">
				<div class="card bg-secondary text-light center">
					<img class="card-img-top" src="{{this.pic}}" alt="">
					<div class="card-body">
						<!--<h4 class="card-title">Model Name: {{this.name}}</h4>
						--><h4 class="card-title">Brand: {{this.brand_name}}</h4>
							<h5 class="card-title">â‚± {{this.price}}</h5>
						<p class="card-text">
							<h7 class="card-title">{{this.warranty}} year warranty</h7>
						</p>
						<p>
							<h7 class="card-title">{{this.category_name}}</h7>
						</p>
							<h7 class="card-title">{{this.product_description}}</h7>
					</div>
				</div>
			</div>
		{{/each}}
		<div class="form-group">
			<div class="text-center">
				{{#each data}}
				<form method="GET" action="/admin/product/update/{{this.id}}">
					<button type="submit" class="btn btn-primary btn-lg" title="Update Product">
					Update Product
					</button>
				</form>
				{{/each}}
			</div>
		</div>
	</div>
</div>