<div class="container">
  <div class="jumbotron mt-2">
    {{#each data}}
    <h1 class="mt-3 text-center">{{this.product_name}}</h1>
      <div class="col-lg-8 col-md-8 col-sm-8 mb-2 mx-auto">
        <div class="card bg-secondary text-light center">
          <img class="card-img-top" src="{{this.pic}}" alt="">
          <div class="card-body">
            <!--<h4 class="card-title">Model Name: {{this.name}}</h4>
            --><h4 class="card-title">Brand: {{this.brand_name}}</h4>
              <h5 class="card-title">â‚± {{this.price}}</h5>
            <p class="card-text">
              <h7 class="card-title">{{this.warranty}} year warranty</h7>
            </p>
            <p>
              <h7 class="card-title">{{this.category_name}}</h7>
            </p>
              <h7 class="card-title">{{this.product_description}}</h7>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>

<div class="container pb-5 mb-5">
  <div class="jumbotron mt-2">
    <h2>Order Request Form</h2>
    <h4>{{msg}}</h4>
    {{#each data}}
    <form method="POST" action="{{this.id}}/send">
      <div class="controls">
        <div class="form-group">
          <label class="control-label" for="first_name">First Name *</label>
          <div>
            <input id="first_name" name="first_name" type="text" placeholder="Juan" class="form-control" required="">
          </div>
        </div>
        <div class="form-group">
          <label class="control-label" for="last_name">Last Name *</label>
          <div>
            <input id="last_name" name="last_name" type="text" placeholder="Dela Cruz" class="form-control" required="">
          </div>
        </div>
        <div class="form-group">
          <label class="control-label" for="email">Email *</label>
          <div>
            <input id="email" name="email" type="text" placeholder="jdelacruz@gmail.com" class="form-control" required="">
          </div>
        </div>
        <div class="form-group">
          <label class="control-label" for="street">Street *</label>
          <div>
            <input id="street" name="street" type="text" placeholder="Masipag Street" class="form-control" required="">
          </div>
        </div>
        <div class="form-group">
          <label class="control-label" for="municipality">Municipality *</label>
          <div>
            <input id="municipality" name="municipality" type="text" placeholder="Manila" class="form-control" required="">
          </div>
        </div>
        <div class="form-group">
          <label class="control-label" for="province">Province *</label>
          <div>
            <input id="province" name="province" type="text" placeholder="NCR" class="form-control" required="">
          </div>
        </div>
        <div class="form-group">
          <label class="control-label" for="zipcode">Zip Code *</label>
          <div>
            <input id="zipcode" name="zipcode" type="text" placeholder="1500" class="form-control" required="">
          </div>
        </div>
        <div class="form-group">
          <label class="control-label" for="productid">Product ID</label>
          <div>
            <input id="product_id" name="product_id" type="text" value="{{this.id}}" class="form-control" required="" readonly="">
          </div>
        </div>
        <div class="form-group">
          <label class="control-label" for="quantity">Quantity *</label>
          <div>
            <input id="quantity" name="quantity" type="number" placeholder="10" class="form-control" required="">
          </div>
        </div>
        <div class="form-group">
          <div class="text-center">
            <button type="submit" class="btn btn-primary btn-lg" title="Submit contact form">
            Submit
            </button>
          </div>
        </div>
      </div>
    </form>
    {{/each}}
  </div>
</div>